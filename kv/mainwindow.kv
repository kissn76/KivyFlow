#:kivy 2.2.1

<MainWindow>:
    WidgetContainer:
        pos: (200, 100)
    WidgetContainer:
        pos: (0, 0)

<WidgetContainer>:
    orientation: "vertical"
    size_hint_x: None
    size_hint_y: None
    width: 300
    drag_rectangle: self.x, self.y + self.height - 30, self.width, 30
    drag_timeout: 10000000
    drag_distance: 0
    canvas.before:
        Color:
            rgba: 0, 1, 0, 0.5
        Rectangle:
            size: self.size
            pos: self.pos
    MDLabel:
        id: titlebar
        text: "Name"
        size_hint_y: None
        height: 30
    WidgetSlider

<ButtonWidget>:
    orientation: "horizontal"
    adaptive_size: True
    MDLabel:
        text: "val"
        adaptive_size: True
    MDRaisedButton:
        text: "Click"
    MDLabel:
        text: "val"
        adaptive_size: True

<WidgetSlider>:
    orientation: "horizontal"
    MDSlider:
        canvas.before:
            Color:
                rgba: 0, 0, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        min: 0
        max: 100
        value: 40
    MDLabel:
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos
        text: "val"
        size_hint_x: 0.1
