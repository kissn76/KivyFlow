#:kivy 2.2.1

<MainWindow>:
    orientation: "horizontal"
    MDScrollView:
        canvas.before:
            Color:
                rgba: 1, 1, 0, 0.5
            Rectangle:
                size: self.size
                pos: self.pos
        MDFloatLayout:
            id: mainlayout
            # size_hint_x: None
            # size_hint_y: None
            # width: 2000
            # height: 2000
    MDStackLayout:
        id: modulelist
        orientation: "lr-tb"
        size_hint_x: None
        # width: 200
        canvas.before:
            Color:
                rgba: 1, 0, 0, 0.5
            Rectangle:
                size: self.size
                pos: self.pos
