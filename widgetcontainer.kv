#:kivy 2.2.1

<WidgetContainer>:
    orientation: "vertical"
    size_hint_x: None
    size_hint_y: None
    width: 300
    drag_rectangle: self.ids.titlebar.ids.mover.x, self.ids.titlebar.ids.mover.y, self.ids.titlebar.ids.mover.width, self.ids.titlebar.ids.mover.height
    drag_timeout: 10000000
    drag_distance: 0
    md_bg_color: app.theme_cls.bg_darkest
    WidgetHeader:
        id: titlebar
        title: "Name"
        size_hint_y: None
        height: 24

<WidgetHeader>:
    orientation: "horizontal"
    title: "Title"
    md_bg_color: app.theme_cls.primary_color
    WidgetHeaderMover:
        id: mover
    MDLabel:
        text: root.title
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 0.5
            Rectangle:
                size: self.size
                pos: self.pos
    WidgetHeaderResizer:
        id: resizer

<WidgetOutput>:
    orientation: "horizontal"
    size_hint_x: None
    padding: 0
    spacing: 0
    text: ""
    dialog: None
    # canvas.before:
    #     Color:
    #         rgba: 1, 0, 0, 1
    #     Rectangle:
    #         size: self.size
    #         pos: self.pos
    MDLabel:
        text: root.text
    MDIcon:
        icon: "rhombus-medium"
        pos_hint: {"center_x": .5, "center_y": .5}
